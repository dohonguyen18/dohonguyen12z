<h3>
    <a href="/toy" class="btn btn-danger">
        <i class="fa fa-plus"> </i> Create New
    </a>
    Product List
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th> Name</th>
            <th>Price</th>
            <th>Amount</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.description}}</td>
                <td>
                    <a href="/toy/{{this._id}}">
                        <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                    </a>
                    <a href="/toy/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?');">
                        <i class="fa fa-trash fa-lg" aria-hidden="true">
                         
                        </i>
                    </a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>